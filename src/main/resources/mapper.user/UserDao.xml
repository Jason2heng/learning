<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user.dao.UserDao">

    <select id="getAll" resultType="user.dao.UserDao" parameterType="java.util.Map">

        SELECT * FROM user

    </select>

    <delete id="delById" parameterType="java.lang.Integer">

        delete from user where id = ${id}

    </delete>

    <insert id="save" parameterType="user.dao.UserDao">

        INSERT INTO `jiaochengdemo`.`user` (
            `id`,
            `username`,
            `password`,
            `createtime`,
            `status`
        )
        VALUES
            (
                NULL,
                #{username},
                #{password},
                #{createtime},
                #{status}
            );



    </insert>

</mapper>
